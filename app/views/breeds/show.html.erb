<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @breed.name %></h1>

  <p class="text-center">Category: <%= @breed.category.name %></p>

  <div class="row">
    <% @breed.images.each do |image| %>
      <div class="col-md-4 mb-4">
        <img src="<%= image.url %>" alt="<%= @breed.name %> image" class="img-fluid breed-image">
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
  </div>
</div>
